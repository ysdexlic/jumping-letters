{
  "name": "jumping-letters-demo",
  "version": "1.0.0",
  "description": "Demo for my React Component - NPM module [Jumping Letters](https://github.com/ysdexlic/jumping-letters)",
  "main": "index.js",
  "scripts": {
    "start": "webpack-dev-server --inline --progress",
    "build": "NODE_ENV=production webpack --progress -p --colors",
    "postbuild": "npm run copyassets && npm run stylus",
    "copyassets": "mkdir -p build/fonts && cp -r style/fonts/* build/fonts",
    "stylus": "stylus style/style.styl -o build/style.css",
    "server": "node server"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "jumping-letters": "^1.2.0",
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.5",
    "express": "^4.15.4",
    "file-loader": "^0.11.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "style-loader": "^0.18.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  }
}
